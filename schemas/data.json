{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/OrangeUnivers/orsic/0.2.0-alpha.2/schemas/data.json",
    "title": "Orsic save state schema",
    "description": "Schema for Orsic's internal track saving system.",
    "type": "object",
    "properties": {
        "tracks": {
            "description": "List of all tracks.",
            "type": "object",
            "propertyNames": {
                "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
            },
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "description": "Name of the track, only used in frontend.",
                        "type": "string"
                    },
                    "author": {
                        "oneOf": [
                            {
                                "description": "Track author",
                                "type": "string"
                            },
                            {
                                "description": "Track authors",
                                "type": "array",
                                "minItems": 1,
                                "items": {
                                    "type": "string"
                                } 
                            }
                        ]
                    },
                    "type": {
                        "description": "Track type. Is either \"normal\", or \"dynamic\". For simple music files use \"basic\".",
                        "type": "string",
                        "enum": [ "normal", "dynamic" ]
                    },
                    "cover": {
                        "description": "Cover file type. Uses track id as file name.",
                        "type": "string",
                        "enum": [ "png", "jpeg", "jpg" ]
                    },
                    "banner": {
                        "description": "Banner file type. Uses track id as file name.",
                        "type": "string",
                        "enum": [ "png", "jpeg", "jpg" ]
                    },
                    "duration": {
                        "description": "Track duration (in seconds).",
                        "type": "integer",
                        "minimum": 0
                    },
                    "versions": {
                        "description": "Track versions with the same properties as a standalone track.",
                        "type": "object",
                        "propertyNames": {
                            "pattern": "^[0-9a-zA-Z]{1,218}$"
                        },
                        "additionalProperties": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "description": "Name of the track, only used in frontend.",
                                    "type": "string"
                                },
                                "author": {
                                    "oneOf": [
                                        {
                                            "description": "Track author",
                                            "type": "string"
                                        },
                                        {
                                            "description": "Track authors",
                                            "type": "array",
                                            "minItems": 1,
                                            "items": {
                                                "type": "string"
                                            } 
                                        }
                                    ]
                                },
                                "type": {
                                    "description": "Track type. Is either \"normal\", or \"dynamic\". For simple music files use \"basic\".",
                                    "type": "string",
                                    "enum": [ "normal", "dynamic" ]
                                },
                                "cover": {
                                    "description": "Cover file type. Uses track id as file name.",
                                    "type": "string",
                                    "enum": [ "png", "jpeg", "jpg" ]
                                },
                                "banner": {
                                    "description": "Banner file type. Uses track id as file name.",
                                    "type": "string",
                                    "enum": [ "png", "jpeg", "jpg" ]
                                },
                                "duration": {
                                    "description": "Track duration (in seconds).",
                                    "type": "integer",
                                    "minimum": 0
                                }
                            },
                            "additionalProperties": false,
                            "required": [ "name", "author", "type", "cover", "duration" ]
                        }
                    }
                },
                "additionalProperties": false,
                "required": [ "name", "author", "type", "cover", "duration" ]
            }
        }
    },
    "required": [ "tracks" ]
}